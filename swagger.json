{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Erasmus RESTAPI",
    "description": "REST API of Applications Engineering Project -- Erasmus",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Auth"
    },
    {
      "name": "User"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/user/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Log in any user",
        "parameters": [
          {
            "name": "Credentials",
            "in": "body",
            "required": true,
            "description": "User information to log in",
            "schema": {
              "$ref": "#/definitions/Credentials"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "User logged in",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          },
          "401": {
            "description": "Bad password"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Create new user",
        "parameters": [
          {
            "name": "Register fields",
            "in": "body",
            "required": true,
            "description": "User that you want to add",
            "schema": {
              "$ref": "#/definitions/Register"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "User created successfully",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          },
          "409": {
            "description": "Existant User"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/getUsersByEmail/{piece}": {
      "parameters": [
        {
          "name": "piece",
          "in": "path",
          "required": true,
          "description": "Email piece of any user ",
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get an array of users containing piece of email",
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/ArrayOfUsers"
            }
          },
          "204": {
            "description": "Empty list"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/getUserByEmail/{email}": {
      "parameters": [
        {
          "name": "email",
          "in": "path",
          "required": true,
          "description": "Email of any user",
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get user by email",
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/user"
            }
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/follow": {
      "put": {
        "tags": [
          "User"
        ],
        "description": "Follow someone",
        "parameters": [
          {
            "name": "Follow parameters",
            "in": "body",
            "required": true,
            "description": "Follow any user to see his activity",
            "schema": {
              "$ref": "#/definitions/Follow"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Followed successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/unfollow": {
      "put": {
        "tags": [
          "User"
        ],
        "description": "Unfollow someone",
        "parameters": [
          {
            "name": "Unfollow parameters",
            "in": "body",
            "required": true,
            "description": "Unfollow any user to avoid his activity",
            "schema": {
              "$ref": "#/definitions/UnFollow"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Unfollowed successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "definitions": {
    "Credentials": {
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Login": {
      "properties": {
        "auth": {
          "type": "string"
        },
        "user": {
          "$ref": "#/definitions/user"
        }
      }
    },
    "user": {
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "profilePhoto": {
          "type": "string"
        },
        "followers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string"
              }
            }
          }
        },
        "following": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string"
              }
            }
          }
        },
        "posts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "Register": {
      "required": [
        "name",
        "email",
        "password"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Follow": {
      "required": [
        "userId",
        "followedId"
      ],
      "properties": {
        "userId": {
          "type": "string"
        },
        "followedId": {
          "type": "string"
        }
      }
    },
    "UnFollow": {
      "required": [
        "userId",
        "unFollowedId"
      ],
      "properties": {
        "userId": {
          "type": "string"
        },
        "followedId": {
          "type": "string"
        }
      }
    },
    "ArrayOfUsers": {
      "properties": {
        "users": {
          "type": "array",
          "items": {
            "properties": {
              "email": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
